
<body>

  <div class="jumbotron">
    <h2>Listing books</h2>
  </div>


<p>
        <form>
          <legend>Search Books</legend>
          <div class='col-xs-4'>
            <input type='text' class='form-control' value='<%= params[:keyword] %>' name='keyword' placeholder='Keyword' >
          </div>

      
        </form>
      </p>



<table class="table table-hover">
    <thead>
    <tr>
      <th>Title</th>
      <th>Author</th>
      <th>Descritpion</th>
      <th colspan="3"> Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.author %></td>
        <td><%= book.descritpion %></td>
        <td><%= link_to 'Show', book, :class =>"btn btn-default" %></td>
        <td><%= link_to 'Edit', edit_book_path(book), :class =>"btn btn-default" %></td>
        <td><%= link_to 'Destroy', book, :class =>"btn btn-default" ,method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Book', new_book_path, :class=> "btn btn-primary" %>


</body>